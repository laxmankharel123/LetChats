<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.letchats">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LetChats"
        tools:targetApi="31">
        <activity
            android:name=".ChatPersonActivity"
            android:exported="false" />
        <activity
            android:name=".Preference"
            android:exported="false" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile_activity"
            android:theme="@style/Theme.LetChats.NoActionBar" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="false"
            android:label="@string/login_activity" />
        <activity
            android:name=".ProfileFragment"
            android:exported="false"
            android:label="@string/login_activity" />
    </application>

</manifest>