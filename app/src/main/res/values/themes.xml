<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetChats" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <!-- Base application theme. -->

    <style name="LWView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VWView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorHint</item>
    </style>

    <style name="LineLView">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorHint</item>
    </style>

    <style name="FView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FormPad" parent="FView">
        <item name="android:padding">15dp</item>
    </style>

    <style name="WLView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WVView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ScrollRoot" parent="FView">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="StyleRoot" parent="Widget.Support.CoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="progressColor" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="StyleList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EdtOTPStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_edit_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="BtnClear">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:tint">@color/colorSecondary</item>
    </style>

    <style name="CustomToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarColoredBackArrow">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="android:maxWidth">1000dp</item>
    </style>

    <style name="ListView" parent="VView">

    </style>

    <style name="TxtSemiStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="textStyleHeadline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/font_noto_sans_regular</item>
        <item name="font">@font/font_noto_sans_regular</item>
        <item name="android:textSize">@dimen/_19ssp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TxtSemiSmallStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TxtBottomSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="borderWidth">1px</item>

    </style>

    <style name="TxtRgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_rg</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:background">@drawable/shape_btn_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">15dp</item>
        <item name="useCompatPadding">true</item>
        <item name="elevation">5dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="ImageRowStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/shape_circle</item>
    </style>

    <style name="TxtNoImageUrlStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/shape_circle_blue</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font_semi</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/shape_gradient</item>
    </style>

    <style name="StyleInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleEdtInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font_semi</item>
    </style>


    <style name="Theme.LetChats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.LetsConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LetsConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LetChats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LetChats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources><!-- Customize your theme here. -->
